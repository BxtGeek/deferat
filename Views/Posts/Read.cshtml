@model Post

@{
    ViewData["Title"] = @Model.Title;
    ViewData["Description"] = @Model.Description;
    ViewData["Image"] = $"https://{Context.Request.Host}{Model.Image}";
}

<div class="jumbotron jumbotron-main text-white" style="background: url('@Model.Image'); " >

</div> 

<div class="container jumbo-overlaid  rounded shadow">

    @await Html.PartialAsync("_Post")

</div>

