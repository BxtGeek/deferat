@model Post

<div class="row convert-emoji">
    <div class="col-sm-2">
        <div class="text-right mt-2">
            @Model.Date.ToShortDateString()<br />  
            <span class="font-weight-bold">@Model.Author</span><br />
            @foreach (var tag in Model.Categories)
            {
                <a asp-controller="Posts" asp-action="Index" asp-route-tag="@tag" 
                    asp-route-pagenumber="1" class="badge badge-pill badge-primary">
                    @tag
                </a>
            }
        </div>
    </div>
    <div class="col-sm-10 article">

        <h1><a asp-controller="Posts" asp-action="Read" asp-route-id="@Model.Id" class="display-4">@Model.Title</a></h1>
        @if (ViewData["Short"] != null)
        {
            @Html.Raw(Model.ShortContent)
        }
        else
        {
            @Html.Raw(Model.Html)
        }
    </div>
</div>