@model Post

<div class="row mt-5 convert-emoji">
    <div class="col-sm-2">
        <div class="text-right mt-2">
            @Model.Date.ToShortDateString()<br />  
            <span class="font-weight-bold">@Model.Author</span><br />
            @foreach (var tag in Model.Categories)
            {
                <a asp-controller="Posts" asp-action="Index" asp-route-tag="@tag" 
                    asp-route-pagenumber="1" class="badge badge-pill badge-primary">
                    @tag
                </a>
            }
        </div>
    </div>
    <div class="col-sm-10">

        <h1><a asp-controller="Posts" asp-action="Read" asp-route-id="@Model.Locator">@Model.Title</a></h1>

        @Html.Raw(Model.Content)
    </div>
</div>