@{
    ViewData["Title"] = "Home";
}


    <div class="jumbotron jumbotron-main text-white" >
        <div class="container">
            <div class="row">
                <div class="col-sm-2">
                    <img src="images/deferat-dark.png" class="img-fluid" />
                </div>
                <div class="col-sm-10">
                    <h1 class="display-3">Deferat</h1>
                    <p class="lead">James Naylor's Programming Blog</p>
                </div>
            </div>
            
            
        </div>
    </div>

    <div class="container">
        <div class="row">
            @foreach (var post in (IEnumerable<Post>)ViewData["Posts"])
            {
                <div class="col-md-4 d-flex align-items-stretch">
                    <div class="card">
                        <div class="card-img-wrapper">
                            <img class="card-img-top img-fluid" src="@post.Image" />
                        </div>
                        <div class="card-body convert-emoji">
                            <h3 class="card-title"><a asp-controller="Posts" asp-action="Read" asp-route-id="@post.Locator">@post.Title</a></h3>                    
                            <div>
                                @Html.Raw(post.ShortContent)
                            </div>
                            
                        </div>
                        <div class="card-footer">
                            <a asp-controller="Posts" asp-action="Read" asp-route-id="@post.Locator" class="btn btn-primary">Read</a>
                        </div>
                    </div>
                </div>
            }
        </div>
        <hr />
    </div> 

</main>

<script type="text/javascript">
    unSplash
</script>
